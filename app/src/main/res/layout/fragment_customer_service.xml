<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSupportOptions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tvSupportHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We're Here to Help"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Contact Info with Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hamxak441@gmail.com"
                        android:textColor="#555555"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support: 9AM - 5PM (Mon-Fri)"
                        android:textColor="#555555"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tvContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:textSize="15sp"
                android:layout_marginBottom="16dp"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminate="true"
                style="@android:style/Widget.Material.ProgressBar.Small" />


            <!-- Complaint Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Message"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etComplaint"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Type your complaint here..."
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:gravity="top"
                android:textColor="#000000"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp" />

            <!-- Quick Suggestions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Suggestions"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnQuick1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="App Issue"
                    android:textAllCaps="false"
                    android:backgroundTint="#ECEFF1"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnQuick2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment Problem"
                    android:textAllCaps="false"
                    android:backgroundTint="#ECEFF1"
                    android:textColor="#333333"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btnQuick3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivery Delay"
                    android:textAllCaps="false"
                    android:backgroundTint="#ECEFF1"
                    android:textColor="#333333"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitComplaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Complaint"
                android:textAllCaps="false"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:elevation="4dp"
                android:padding="14dp" />
        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#555555"
            android:backgroundTint="#E0E0E0"
            android:padding="10dp"
            android:elevation="2dp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>
