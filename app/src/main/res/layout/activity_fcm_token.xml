<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FcmTokenActivity">

    <Button
        android:id="@+id/btnFetchToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get FCM Token"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvTokenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FCM Token:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Token will appear here"
            android:textSize="14sp"/>
    </ScrollView>

    <Button
        android:id="@+id/btnCopyToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy Token"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnShareToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Token"/>

</LinearLayout>