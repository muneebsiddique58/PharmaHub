<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_50">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Product Images Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProductImages"
                android:layout_width="0dp"
                android:layout_height="350dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerProductImages"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageClose"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/bg_rounded_white"
                        android:padding="8dp"
                        android:src="@drawable/ic_close"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/g_black" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Product Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProductInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardProductImages">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title and Price Row -->
                    <LinearLayout
                        android:id="@+id/linearTitlePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvProductName"
                            style="@style/h3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Paracetamol 500mg Tablet"
                            android:textColor="@color/g_black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvProductPrice"
                            style="@style/h3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PKR 25.00"
                            android:textColor="@color/g_blue"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Generic Name -->
                    <TextView
                        android:id="@+id/tvGenericName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Generic: Paracetamol"
                        android:textColor="@color/g_gray700"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <!-- Status Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <!-- Availability Status -->
                        <TextView
                            android:id="@+id/tvAvailabilityStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:text="In Stock (10 available)"
                            android:textColor="@color/g_green"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:drawableStartCompat="@drawable/ic_check_circle" />

                        <!-- Prescription Info -->
                        <TextView
                            android:id="@+id/tvPrescriptionInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_prescription_required"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="Prescription Required"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <!-- Prescription Pending Status -->
                    <TextView
                        android:id="@+id/tvPrescriptionPendingStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_warning_rounded"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:text="â³ Prescription review in progress. Please wait for approval before adding more medicines."
                        android:textColor="@color/g_orange_yellow"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_warning" />

                    <!-- Product Description -->
                    <TextView
                        android:id="@+id/tvProductDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Product description will appear here with detailed information about the medicine, its uses, and important notes."
                        android:textColor="@color/g_gray700"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Medicine Details Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMedicineDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardProductInfo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Details Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Medicine Details"
                        android:textColor="@color/g_black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Dosage Form -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDosageFormLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dosage Form"
                            android:textColor="@color/g_black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDosageForm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tablet"
                            android:textColor="@color/g_gray700"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Strength Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStrengthLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Strength"
                            android:textColor="@color/g_black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStrengthValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_strength_selected"
                            android:padding="8dp"
                            android:text="500mg"
                            android:textColor="@color/g_blue"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvStrengths"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:listitem="@layout/strength_rv_item" />
                    </LinearLayout>

                    <!-- Manufacturing Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvManufacturingDateLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Manufactured"
                            android:textColor="@color/g_black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvManufacturingDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="06/2025"
                            android:textColor="@color/g_gray700"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Expiry Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvExpiryDateLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Expiry"
                            android:textColor="@color/g_black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvExpiryDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="07/2025"
                            android:textColor="@color/g_gray700"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Manufacturer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvManufacturerLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Manufacturer"
                            android:textColor="@color/g_black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvManufacturer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Square Pharmaceuticals Ltd."
                            android:textColor="@color/g_gray700"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Customer Reviews Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCustomerReviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardMedicineDetails">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Reviews"
                        android:textColor="@color/g_black"
                        android:textSize="18sp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins_thin" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCustomerReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ProgressBar for Reviews -->
            <ProgressBar
                android:id="@+id/reviewsProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/cardCustomerReviews"
                app:layout_constraintEnd_toEndOf="@id/cardCustomerReviews"
                app:layout_constraintStart_toStartOf="@id/cardCustomerReviews"
                app:layout_constraintTop_toTopOf="@id/cardCustomerReviews" />

            <!-- No Reviews Text -->


            <!-- Add to Cart Button -->
            <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/buttonAddToCart"
                android:layout_width="0dp"
                android:layout_height="@dimen/mediumButtonHeight"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Add to Cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardCustomerReviews"
                app:spinning_bar_color="@color/white"
                style="@style/blueButtonStyle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>