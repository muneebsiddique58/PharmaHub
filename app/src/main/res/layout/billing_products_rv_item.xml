<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgProductCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/product_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProductCartName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_light"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imgProductCart"
        app:layout_constraintTop_toTopOf="@id/imgProductCart"
        app:layout_constraintEnd_toStartOf="@id/tvProductCartPrice" />

    <TextView
        android:id="@+id/tvProductCartPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 0.00"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_thin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgProductCart" />

    <TextView
        android:id="@+id/tvProductCartStrength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Strength: 500mg"
        android:textColor="@color/g_gray700"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_light"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tvProductCartName"
        app:layout_constraintTop_toBottomOf="@id/tvProductCartName"
        app:layout_constraintEnd_toEndOf="@id/tvProductCartName"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvProductCartQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Qty: 1"
        android:textColor="@color/g_gray700"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintStart_toStartOf="@id/tvProductCartName"
        app:layout_constraintTop_toBottomOf="@id/tvProductCartStrength" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReviewProduct"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="Write Review"
        android:textColor="@color/white"
        android:backgroundTint="@color/g_blue"
        android:fontFamily="@font/poppins_thin"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_review"
        app:iconSize="16dp"
        app:iconTint="@color/white"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tvProductCartName"
        app:layout_constraintTop_toBottomOf="@id/tvProductCartQuantity"
        tools:visibility="visible" />

    <!-- Divider View constrained properly -->
    <View
        android:id="@+id/dividerView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/grey_200"
        app:layout_constraintTop_toBottomOf="@id/btnReviewProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" /> <!-- Ensures proper wrap height -->

</androidx.constraintlayout.widget.ConstraintLayout>
