<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose how you'd like to pay for your order"
            android:textSize="16sp"
            android:textColor="@color/grey_600"
            android:layout_marginBottom="24dp"/>

        <!-- Payment Methods RecyclerView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Payment Options"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPaymentMethods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_cod_payment"/>

        <!-- Payment Note Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/g_blue100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info_outline"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tvPaymentNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Currently, we only accept Cash on Delivery (COD). More payment options coming soon!"
                    android:textColor="@color/grey_700"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Future Payment Methods Coming Soon Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/grey_600"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Future Payment Method 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:alpha="0.5">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_credit_card_24"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/grey_400"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Credit/Debit Cards"
                    android:textColor="@color/grey_500"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Future Payment Method 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:alpha="0.5">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_account_balance_wallet"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/grey_400"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Digital Wallets (PayPal, Google Pay)"
                    android:textColor="@color/grey_500"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Future Payment Method 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:alpha="0.5">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_account_balance"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/grey_400"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bank Transfer"
                    android:textColor="@color/grey_500"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Spacer to push button to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Confirm Payment Button -->
        <Button
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm COD Order"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>