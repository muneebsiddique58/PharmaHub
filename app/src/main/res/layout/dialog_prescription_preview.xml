<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mapbox_rounded_corner"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPrescriptionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prescription"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_thin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/g_gray700"
        app:layout_constraintTop_toBottomOf="@id/tvPrescriptionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrescriptionImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivPrescriptionImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Prescription Image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPrescriptionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Status: Approved"
        android:textColor="@color/g_green"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintTop_toBottomOf="@id/cardPrescriptionImage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPrescriptionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Uploaded: 10-05-2025"
        android:textColor="@color/g_gray700"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintTop_toBottomOf="@id/tvPrescriptionStatus"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPrescriptionExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Expiry: 10-06-2025"
        android:textColor="@color/g_gray700"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintTop_toBottomOf="@id/tvPrescriptionDate"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnClosePrescriptionPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Close"
        android:textAllCaps="false"
        android:background="@drawable/unselected_button_background"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintTop_toBottomOf="@id/tvPrescriptionExpiry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>