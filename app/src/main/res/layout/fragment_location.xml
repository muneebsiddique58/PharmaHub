<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary_color"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Verify Your Location"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Verification Message -->
    <TextView
        android:id="@+id/tvVerificationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:text="To ensure you're human, please confirm your current location by tapping the map marker. The app will use this only for verification and not store it permanently."
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp" />

    <!-- Map Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Map View -->
            <com.mapbox.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Location Address -->
    <TextView
        android:id="@+id/tvLocationAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:text="Detecting location..."
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

    <!-- Fallback Layout (for when GPS fails) -->
    <LinearLayout
        android:id="@+id/layoutFallback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- City Input -->
        <EditText
            android:id="@+id/etCityInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Enter your city name"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:visibility="gone" />

        <!-- CAPTCHA -->
        <TextView
            android:id="@+id/tvCaptchaCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:padding="12dp"
            android:text="Type 'PHARMA' to proceed:"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCaptchaInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Enter verification code"
            android:inputType="textCapCharacters"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirmLocation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_button"
        android:text="Confirm Location"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:enabled="false"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>